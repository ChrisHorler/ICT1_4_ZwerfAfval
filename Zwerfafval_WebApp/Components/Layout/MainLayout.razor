@inherits LayoutComponentBase
@using MudBlazor
@inject DateService DateService

<MudThemeProvider />
<MudSnackbarProvider />
<MudDialogProvider />
<MudPopoverProvider />

<div class="page">
    <main>
        <div class="top-row px-4" style="display: flex; align-items: center; gap: 16px;">
            <a href="">Zwerfafval_WebApp</a>
            <MudDatePicker Label="Input date" Editable="true" @bind-Date="SelectedDate" Placeholder="Select Date" />
            <a href="overview">Overview</a>
            <a href="analytics">Analytics</a>
            <a href="settings">Settings</a>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    private DateTime? SelectedDate
    {
        get => DateService.SelectedDate;
        set
        {
            if (value.HasValue)
            {
                DateService.SelectedDate = value.Value;
            }
        }
    }
}


